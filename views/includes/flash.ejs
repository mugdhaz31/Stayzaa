<% if(success && success.length){ %>
  <div class="alert alert-dismissible fade show d-flex align-items-center shadow-sm border-0 rounded-3 p-3 mb-4"
       role="alert"
       style="background: linear-gradient(90deg, #009688, #4db6ac); color: white;">
    <i class="bi bi-check-circle-fill me-2 fs-4"></i>
    <div class="flex-grow-1"><%= success %></div>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if(error && error.length){ %>
  <div class="alert alert-dismissible fade show d-flex align-items-center shadow-sm border-0 rounded-3 p-3 mb-4"
       role="alert"
       style="background: linear-gradient(90deg, #e53935, #ef5350); color: white;">
    <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
    <div class="flex-grow-1"><%= error %></div>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
